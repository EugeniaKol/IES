<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/black"
    android:orientation="vertical"
    >


    <TextView
        android:id="@+id/input"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:textColor="@color/white"
        android:gravity="end"
        android:maxLines="1"
        android:textSize="60dp"
         />

    <TextView
        android:id="@+id/result"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:textColor="@color/nice_green"
        android:gravity="end"
        android:textSize="40dp"
        android:maxLines="1"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_1"
                style="@style/NumberButtonStyle"
                android:text="1">
            </TextView>
            <TextView
                android:id="@+id/tv_2"
                style="@style/NumberButtonStyle"
                android:text="2">
            </TextView>
            <TextView
                android:id="@+id/tv_3"
                style="@style/NumberButtonStyle"
                android:text="3">
            </TextView>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_4"
                style="@style/NumberButtonStyle"
                android:text="4">
            </TextView>
            <TextView
                android:id="@+id/tv_5"
                style="@style/NumberButtonStyle"
                android:text="5">
            </TextView>
            <TextView
                android:id="@+id/tv_6"
                style="@style/NumberButtonStyle"
                android:text="6">
            </TextView>

        </LinearLayout>
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_7"
                style="@style/NumberButtonStyle"
                android:text="7">
            </TextView>
            <TextView
                android:id="@+id/tv_8"
                style="@style/NumberButtonStyle"
                android:text="8">

            </TextView>
            <TextView
                android:id="@+id/tv_9"
                style="@style/NumberButtonStyle"
                android:text="9">

            </TextView>



        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_0"
                style="@style/SmallButtonStyle"
                android:text="0">
            </TextView>
            <TextView
                android:id="@+id/tv_clear"
                style="@style/SmallButtonStyle"
                android:text="C">

            </TextView>

            <TextView
                android:id="@+id/tv_calc"
                style="@style/ActionButtonStyle"
                android:text="Calculate">

            </TextView>


        </LinearLayout>




    </LinearLayout>





</LinearLayout>
